<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@xml/list_row_selector"
    android:padding="8dp" >
 
    <!-- Request Id -->
    <TextView
        android:id="@+id/main_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
 
    <!-- Request subject -->
    <TextView
        android:id="@+id/main_request_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_request_id"
        android:layout_marginTop="1dip"
        android:textStyle="bold" />
     
    <!-- Request details -->
    <TextView
        android:id="@+id/main_request_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_request_heading"
        android:layout_marginTop="5dp" />
 
    <!-- Request time -->
    <TextView
        android:id="@+id/main_request_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
 
</RelativeLayout>